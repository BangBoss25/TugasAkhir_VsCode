@model TugasAkhir_VsCode.Models.ViewModel.ItemVm

@{
    Layout = "_LayoutUtama";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true">

<div class="form-header">
    <h1><a asp-action="Index"><i class="bi bi-arrow-left-circle"></i></a> Detail Barang</h1>
    <nav class="breadcrumbs no-phone mini">
        <ul>
            <li>
                <a>Master</a>
            </li>
            <li>
                <a asp-action="Index">Data Barang</a>
            </li>
            <li>
                <a asp-action="EditItem">Form Detail Barang</a>
            </li>
        </ul>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <form enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label>Kode Barang </label>
                        <input type="text" asp-for="Kode_barang" maxlength="30" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>Nama Barang</label>
                        <input asp-for="Nama_barang" type="text" maxlength="30" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label>Harga Modal</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-primary text-white">Rp</span>
                            </div>
                            <input asp-for="Harga_modal" type="text" maxlength="30" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Harga Jual</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-primary text-white">Rp</span>
                            </div>
                            <input asp-for="Harga_jual" type="text" maxlength="30" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Keterangan</label>
                        <textarea asp-for="Deskripsi" class="form-control" maxlength="100" style="height: 150px;"
                            readonly></textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Jumlah Stok</label>
                        <input asp-for="Stok_barang" type="text" onkeydown="return validateInputNumber(event, this)"
                            maxlength="10" class="form-control" readonly>
                    </div>
                    <div class="form-group">
                        <label for="formFile">Gambar</label>
                        <div id="preview1">
                            @{
                                if (Model.image1 != null)
                                {
                                    <img src="@Model.pathImage1" style="height:250px; margin-bottom: 5px;" />
                                }
                                else 
                                {
                                    <img src="~/File/luffy.jpg" style="height:250px; margin-bottom: 5px;" />
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>